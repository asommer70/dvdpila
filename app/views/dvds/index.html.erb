
<% if @search %>
  <h3>Results for:</h3> <%= @search %>
<% end %>
<br/>

<ul class="small-block-grid-5">
  <% @dvds.each do |dvd| %>
    <li>
      <% if dvd.image %>
        <%= link_to dvd_path(dvd) do %>
          <%= image_tag dvd.image.url, class: 'th has-tip',
                        id: dom_id(dvd),
                        data: { tooltip: true, options: 'hover_delay: 500;' },
                        title: dvd.abstract_txt %>
        <% end %>
      <% end %>

      <div class="dvd-title">
        <%= link_to  dvd.title, dvd_path(dvd) %>
      </div>
      <% dvd.tag_list[0..1].each do |tag| %>
        <span class="label info"><%= tag %></span>
      <% end %>
      <span class="label info">...</span>
    </li>
  <% end %>
</ul>




<br>
