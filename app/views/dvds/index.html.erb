<p id="notice"><%= notice %></p>

<h1>Listing Dvds</h1>

<br/>

<%= form_tag search_path do %>
  <%= text_field_tag 'search', '', placeholder: 'Find DVD' %>
<% end %>

<br/>
<% if @search %>
  <strong>Results for:</strong> <%= @search %>
<% end %>

<br/><hr/><br/>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Rating</th>
    <th>Abstract source</th>
    <th>File url</th>
    <th>Playback time</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @dvds.each do |dvd| %>
    <tr>
      <td class="title"><%= dvd.title %></td>
      <td class="rating"><%= dvd.rating %></td>
      <td class="abstract_source"><%= dvd.abstract_source %></td>
      <td class="file_url"><%= dvd.file_url %></td>
      <td class="playback_time"><%= dvd.playback_time %></td>
      <td><%= link_to 'Show', dvd %></td>
      <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
      <td><%= link_to 'Destroy', dvd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if action_name == 'index' %>
  <%= link_to 'New Dvd', new_dvd_path %>
<% end %>

<% if action_name == 'search' %>
  <%= link_to 'Home', '/' %>
<% end %>