extends layout.pug
  
block content
  h1 Search Results for #{term.toUpperCase()}
  p #{dvds.length} DVDs found.
  br/
  br/
  .row.text-center
    each dvd in dvds
      .columns.large-2.dvd-list-dvd
        a(href='/dvds/' + dvd._id)
          img(class="thumbnail dvds-list-image", src=dvd.imageUrl)
        br/
        a(href="/dvds/" + dvd._id) #{dvd.title}
